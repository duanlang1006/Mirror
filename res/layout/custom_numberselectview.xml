<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent" 
    android:layout_marginBottom="@dimen/custom_number_select_view_margin_bottom"
    android:padding="@dimen/custom_number_select_view_padding" >


    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:minWidth="@dimen/seekbar_minWidth" >

        <SeekBar
            android:id="@+id/view_sb_selectnum"
            android:minWidth="@dimen/seekbar_minWidth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:max="100"
            android:maxHeight="6.0dip"
            android:minHeight="6.0dip"
            android:paddingLeft="16.0dip"
            android:paddingRight="16.0dip"
            android:progress="50"
            android:progressDrawable="@drawable/po_seekbar"
            android:thumb="@drawable/seekbar_thumb" />
    </LinearLayout>

        <ImageView
        android:id="@+id/view_btn_subtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:layout_marginLeft="@dimen/margin_left_and_right"
        android:layout_alignLeft="@id/layout"
        android:background="@drawable/button_sub_selector" />
    
        
    <ImageView
        android:id="@+id/view_btn_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout"
        android:layout_marginRight="@dimen/margin_left_and_right"
        android:layout_alignRight="@id/layout"
        android:background="@drawable/button_add_selector" />

</RelativeLayout>